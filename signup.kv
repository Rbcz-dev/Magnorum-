#:kivy 2.2.0

MDScreen:
    name:'signup'
    MDCard:
        orientation: 'vertical'
        elevation: 5
        pos_hint:{'center_x':.5,'center_y':.5}
        size_hint: None, None
        size: '350dp','450dp'
        padding: 3
        spacing: 10
        MDLabel:
            text: 'Bem vindo '
            halign: 'center'
            font_style: 'H2'
            font_size: '40'
            size_hint_y:None
            height: self.texture_size[1]
            padding_y:5
        MDLabel:
            text: 'Cadastre-se para novas possibilidades'
            halign: 'center'
            font_size: '20'
            size_hint_y:None
            height: self.texture_size[1]
            padding_y:5
        MDTextField:
            mode: "round"
            pos_hint_y:{'center_y':.10}
            hint_text:'digite seu e-mail válido ' 
            icon_right:'email-plus'
        MDTextField:
            mode: "round"
            pos_hint_y:{'center_y':.10}
            hint_text:'digite seu número válido ' 
            icon_right:'cellphone-check'
        MDTextField:
            id: senha_s_input
            mode: "round"
            pos_hint:{'center_x':.5,'center_y':.5}
            hint_text:'escolha senha segura'
            icon_right:'eye'
        MDTextField:
            id: confirm_s_input
            mode: "round"
            pos_hint:{'center_x':.5,'center_y':.5}
            hint_text:'confirme sua  senha '
        MDIconButton:
            id: toggle_s
            icon: 'eye-off'
            pos_hint: {'center_x': 0.5}
            on_press: app.toggle_password_s()
        MDRaisedButton:
            pos_hint:{'center_x':.5,'center_y':.5}
            text: 'login'
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'login'
        MDIconButton:
            icon: 'theme-light-dark'
            text: 'theme'
            on_release:app.theme()