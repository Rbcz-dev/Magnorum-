#:kivy 2.2.0
MDScreen:
    name:'login'
    MDCard:
        orientation: 'vertical'
        elevation: 5
        pos_hint:{'center_x':.5,'center_y':.5}
        size_hint: None, None
        size: '350dp','450dp'
        padding: 3
        spacing: 10
        MDLabel:
            text: 'Bem vindo'
            halign: 'center'
            font_style: 'H2'
            font_size: '40'
            size_hint_y:None
            height: self.texture_size[1]
            padding_y:5
        MDLabel:
            text: 'conecte-se a sua conta agora!!'
            halign: 'center'
            font_size: '20'
            size_hint_y:None
            height: self.texture_size[1]
            padding_y:5
        MDTextField:
            mode: "round"
            pos_hint_y:{'center_y':.10}
            hint_text:'digite seu e-mail' 
            icon_right:'email-arrow-right'
        MDTextField:
            id:senha_input
            mode: "round"
            pos_hint:{'center_x':.5,'center_y':.5}
            hint_text:'digite sua senha'
            icon_right:'eye'
        MDIconButton:
            id: toggle_button
            icon: 'eye-off'
            pos_hint: {'center_x': 0.5}
            on_press: app.toggle_password()
        MDRaisedButton:
            pos_hint:{'center_x':.5,'center_y':.5}
            text: 'Signup'
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'signup'     
        MDIconButton:
            icon:'theme-light-dark'
            text: 'to change theme'
            on_release:app.theme() 